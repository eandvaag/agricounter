doctype html

html
    head
        title="AgriCounter"
        meta(name="viewport" content="width=device-width, initial-scale=1")

        link(rel="icon" href=process.env.AC_PATH + "/images/favicon.ico")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css")
        link(href=process.env.AC_PATH + '/stylesheets/main.css' rel='stylesheet')

        
        
        script(src="https://code.jquery.com/jquery-3.6.0.js")
        script(type='text/javascript' src=process.env.AC_PATH + '/javascripts/sign_in.js')

    body

        div(id="container")

            div(id="body")
                div(class="panel_center")
                    div(class="sign_in_panel")


                        div(style="height:70px")
                            h(class="title") AgriCounter

                        div(class="dark-bg" style="padding: 10px 20px; border: none; border-top: 1px solid white; border-bottom: 1px solid white;")
                            form(action="")

                                label(for="username" class="label" style="text-align: left; padding-left: 5px") Username

                                table
                                    tr 
                                        td(style="width: 100%")
                                            input(id="username" name="username" type="text" style="width: 345px" autocomplete="username" required)

                                label(for="password" class="label" style="text-align: left; padding-left: 5px") Password

                                table
                                    tr 
                                        td 
                                            input(id="password" name="password" type="password" style="width: 345px" autocomplete="current-password" required)
                                        td 
                                            i(id="password_vis_toggle" style="cursor: pointer; color: white; margin-left: -40px; margin-bottom: 17px; font-size: 15px" class="fa-solid fa-eye-slash")


                                div(style="height: 20px")

                                button(class="button-green button-green-hover" style="width: 95%")
                                    span Sign In

                        div(style="height:50px; display: block")
                            br
                            span(id="error_message" style="text-align: center;")

